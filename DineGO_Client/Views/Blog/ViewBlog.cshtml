<style>
    /* CSS của bạn */
    .carousel-card img {
        width: 100%;
        max-height: 200px;
        /* Giới hạn chiều cao tối đa */
        object-fit: cover;
        /* Đảm bảo hình ảnh không bị biến dạng */
        border-radius: 8px;
    }

    .carousel-card {
        margin: 15px 0;
        text-align: center;
    }

    .keywords {
        background-color: #f8f9fa;
        padding: 10px;
        border-radius: 5px;
    }

    .keywords a {
        margin: 5px;
        display: inline-block;
    }

    .d-flex img {
        width: 100px;
        /* Chiều rộng cố định cho hình ảnh thumbnail */
        height: 100px;
        /* Chiều cao cố định cho hình ảnh thumbnail */
        object-fit: cover;
        /* Đảm bảo hình ảnh không bị biến dạng */
    }

    .blog-container {
        margin: 20px auto;
        padding: 20px;
        max-width: 800px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    h3 {
        color: #b32424;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .blog-item {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        border-bottom: 1px solid #eee;
        padding-bottom: 15px;
    }

    .blog-item img {
        width: 150px;
        /* Chiều rộng cố định cho hình ảnh blog */
        height: 100px;
        /* Chiều cao cố định cho hình ảnh blog */
        border-radius: 8px;
        object-fit: cover;
        /* Đảm bảo hình ảnh không bị biến dạng */
        margin-right: 20px;
    }

    .blog-content h3 {
        font-size: 18px;
        margin: 0 0 10px;
        color: #333;
    }

    .blog-content p {
        font-size: 14px;
        margin: 0 0 5px;
        color: #555;
    }

    .blog-content p:first-of-type {
        font-size: 12px;
        color: #999;
    }

    .see-more {
        display: block;
        text-align: right;
        color: #b32424;
        font-weight: bold;
        margin-top: 20px;
        text-decoration: none;
    }

    .see-more:hover {
        text-decoration: underline;
    }
</style>

@{
    Layout = "../../Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "UpdateReservation";
}

<form action="/update-reservation" method="POST">
    <div class="mb-3">
        <label for="reservation-id" class="form-label">Reservation ID</label>
        <input type="text" class="form-control" id="reservation-id" name="reservation-id" value="1" readonly>
    </div>
    <div class="mb-3">
        <label for="status" class="form-label">Status</label>
        <select class="form-select" id="status" name="status">
            <option value="Booked" selected>Booked</option>
            <option value="Empty">Empty</option>
            <option value="Pending">Pending</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="quantity" class="form-label">Quantity</label>
        <input type="number" class="form-control" id="quantity" name="quantity" value="5">
    </div>

    <div class="mb-3">
        <label for="date-time" class="form-label">Date and Time</label>
        <input type="datetime-local" class="form-control" id="date-time" name="date-time" value="2021-06-01T12:00">
    </div>

    <div class="mb-3">
        <label for="note" class="form-label">Note</label>
        <textarea class="form-control" id="note" name="note"
            rows="3">People often think that eating at home is healthier. I completely agreed with this point of view until I visited Rutass restaurant. When I started college, cooking took up a lot of my time. When the wonderful time comes to go, I realized that Rutass is the best restaurant I have ever known.</textarea>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Update Reservation</button>
        <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
    </div>
</form>

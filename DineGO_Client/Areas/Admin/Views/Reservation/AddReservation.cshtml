@{
    Layout = "../../Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "AddReservation";
}

<div class="container">
    <div class="form-container">
        <h2 class="text-center mb-4">Add Reservation</h2>
        <form>
            <div class="form-group">
                <label for="reservationId">Reservation ID</label>
                <input type="text" class="form-control" id="reservationId" placeholder="Enter reservation ID">
            </div>
            <div class="form-group">
                <label for="status">Status</label>
                <select class="form-control" id="status">                
                    <option value="empty">Empty</option>
                    <option value="booked">Booked</option>
                </select>
            </div>
            
            <div class="form-group">
                <label for="quantity">Quantity</label>
                <input type="text" class="form-control" id="quantity" placeholder="Enter quantity">
            </div>

            <div class="form-group">
                <label for="date">Date and Time</label>
                <input type="datetime-local" class="form-control" id="date">
            </div>

            <div class="form-group">
                <label for="note">Note</label>
                <textarea class="form-control" id="note" rows="3" placeholder="Enter note"></textarea>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Add Reservation</button>          
            <a href="javascript:history.back()" class="btn btn-secondary btn-block mb-3">Back</a>          
        </form>
    </div>
</div>
